@model IEnumerable<EduLibraryHub.Data.Entities.Book>

@{
    ViewData["Title"] = "Books";
    var page = (int)(ViewBag.Page ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<h1>@ViewData["Title"]</h1>

<form class="form-inline mb-3">
    <div class="input-group">
        <input id="searchBox"
               class="form-control"
               type="text"
               placeholder="Search by title or author…" />
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Release Year</th>
            <th>Tome</th>
            <th>Inventory</th>
            <th>Genre</th>
            <th>Tags</th>
            <th>Reviews</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="books-body">
        @* initial load *@
        @Html.Partial("_BookRows", Model)
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Paging">
        <ul class="pagination justify-content-center">
            <!-- Prev -->
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page - 1)">
                    « Prev
                </a>
            </li>

            <!-- Pages 1,2,3 -->
            @for (int p = 1; p <= Math.Min(3, totalPages); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p">@p</a>
                </li>
            }

            <!-- Ellipsis if there are more pages -->
            @if (totalPages > 4)
            {
                <li class="page-item disabled">
                    <span class="page-link">…</span>
                </li>
            }

            <!-- Last page -->
            @if (totalPages > 3)
            {
                <li class="page-item @(page == totalPages ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@totalPages">
                        @totalPages
                    </a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page + 1)">
                    Next »
                </a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const box = document.getElementById('searchBox');
            let timer = null;

            box.addEventListener('input', function() {
                clearTimeout(timer);
                timer = setTimeout(() => {
                    const term = box.value;
                    fetch(`@Url.Action("Search", "Books")?searchString=`
                           + encodeURIComponent(term))
                      .then(r => r.text())
                      .then(html => {
                          document.getElementById('books-body').innerHTML = html;
                      });
                }, 200);
            });
        });
    </script>
}
