@model User

<h2>Register</h2>
<form method="post">
    <label>Name:</label>
    <input asp-for="Name" required /><br />

    <label>Email:</label>
    <input asp-for="Email" required /><br />

    <label>Password:</label>
    <input type="password" name="password" required /><br />

    <button type="submit">Register</button>
</form>
