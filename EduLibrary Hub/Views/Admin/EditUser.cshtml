@model User

<h2>Edit User</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Name:</label>
    <input asp-for="Name" /><br />
    <label>Email:</label>
    <input asp-for="Email" /><br />
    <label>Role:</label>
    <select asp-for="Role">
        <option value="User">User</option>
        <option value="Admin">Admin</option>
    </select><br />
    <button type="submit">Save</button>
</form>